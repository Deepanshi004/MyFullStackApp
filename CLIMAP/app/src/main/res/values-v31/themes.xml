<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApp.NoSplash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Kill the system splash -->
        <item name="android:windowBackground">@android:color/black
        </item> <!-- Or your desired background -->
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenBackground">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApp.NoSplash</item>
    </style>

